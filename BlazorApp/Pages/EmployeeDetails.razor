@page "/employeedetails/{employeeId}"

<PageTitle>Details of @Employee?.FirstName @Employee?.LastName</PageTitle>

@if(Employee != null)
{
    <div class="row">
        <div class="col-3">
            <div class="mb-3">
                <img src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{Employee.EmployeeId}.jpg")" class="employee-img rounded-circle" />
            </div>
        </div>
         <div class="col-9">
             <div class="row">
                <div class="form-group d-inline-flex">
                    <div class="col-4">
                        <label>Employee ID</label>
                    </div>
                    <div class="col-8">
                        <label type="text">@Employee?.EmployeeId</label>
                    </div>
                </div>

                <div class="form-group d-inline-flex">
                    <div class="col-4">
                        <label>First Name</label>
                    </div>
                    <div class="col-8">
                <label type="text">@Employee?.FirstName</label>
                    </div>
                </div>

                <div class="form-group d-inline-flex">
                    <div class="col-4">
                        <label>Last Name</label>
                    </div>
                    <div class="col-8">
                <label type="text">@Employee?.LastName</label>
                    </div>
                </div>

                <div class="form-group d-inline-flex">
                    <div class="col-4">
                        <label>Birthdate</label>
                    </div>
                    <div class="col-8">
                <label type="text">@Employee?.BirthDate</label>
                    </div>
                </div>

                <div class="form-group d-inline-flex mt-4">
                    <button class="btn btn-secondary"
                        @onclick="() => NavigateBack()">
                        Back
                    </button>
                </div>

             </div>
        </div>   

    </div>
}